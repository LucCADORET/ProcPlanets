{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "naga",
            "type": "shell",
            "command": "naga assets/spheres/shader.wgsl",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true,
                "revealProblems": "never"
            },
            "problemMatcher": {
                "owner": "wgsl",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": [
                    {
                        "regexp": "^(error|warning|info):(.*)$",
                        "severity": 1,
                        "message": 2
                    },
                    {
                        "regexp": "^   ┌─ (.*):(\\d+):(\\d+)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                    }
                ]
            }
        }
    ]
}